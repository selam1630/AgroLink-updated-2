{
  "name": "agrolink-monorepo",
  "private": true,
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:backend": "docker compose up",
    "dev:frontend": "cd apps/frontend && npm run dev",
    "dev:apps": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\""
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/express-serve-static-core": "^5.0.7",
    "@types/node-fetch": "^2.6.13",
    "concurrently": "^8.2.0",
    "turbo": "^1.13.4"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "firebase-admin": "^13.4.0"
  }
}
